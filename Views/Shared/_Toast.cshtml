<template x-teleport='body'>
	<div 
		x-data='{
			toast_toaster: false,
			toast_toasterMessage: "",
		}'
		x-show='toast_toaster'
		x-transition:enter="transition ease-out duration-300"
		x-transition:enter-start="opacity-0 -translate-y-2"
		x-transition:enter-end="opacity-100 translate-y-0"
		x-transition:leave="transition ease-in duration-300"
		x-transition:leave-start="opacity-100 translate-y-0"
		x-transition:leave-end="opacity-0 -translate-y-2"
		x-on:show_toaster.window=
		'
			toast_toaster = true
			toast_toasterMessage = $event.detail.message
			setTimeout(() =>
			{
				toast_toaster = false
			}, 3000)
		'
		x-on:click=
		'
			toast_toaster = false
		'
		x-text='toast_toasterMessage'
		class='fixed top-5 left-1/2 transition-all -translate-x-1/2 duration-300 rounded bg-gray-800 px-4 py-2 text-white shadow cursor-pointer'
		style='display: none'
	></div>
</template>