@model string

<button
	type='button'
	x-data='{
		passwordEye_btnProperties:
		{
			show: false,
			size: "size-6",
			color: "text-grey-800"
		}
	}'
	x-init=
	'
		$nextTick(() =>
		{
			if(!passwordEye_btnProperties.size)
			{
				passwordEye_btnProperties.size = "size-6"
			}

			if(!passwordEye_btnProperties.color)
			{
				passwordEye_btnProperties.color = "text-grey-800"
			}
		})
	'
	x-modelable='passwordEye_btnProperties'
	x-model='@Model'
	x-on:click=
	'
		passwordEye_btnProperties.show = !passwordEye_btnProperties.show
	'
	class='absolute top-1/2 right-3 -translate-y-1/2 inline-flex justify-center items-center px- py- debug-ring'
>
	<svg
		x-show='!passwordEye_btnProperties.show'
		xmlns='http://www.w3.org/2000/svg'
		viewBox='0 0 24 24'
		fill='none'
		stroke='currentColor'
		stroke-width='2'
		stroke-linecap='round'
		stroke-linejoin='round'
		:class='`${passwordEye_btnProperties.size} ${passwordEye_btnProperties.color}`'
	>
		<path d='M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z'></path>
		<circle cx='12' cy='12' r='3'></circle>
	</svg>
	<svg
		x-show='passwordEye_btnProperties.show'
		xmlns='http://www.w3.org/2000/svg'
		viewBox='0 0 24 24'
		fill='none'
		stroke='currentColor'
		stroke-width='2'
		stroke-linecap='round'
		stroke-linejoin='round'
		:class='`${passwordEye_btnProperties.size} ${passwordEye_btnProperties.color}`'
		style='display: none'
	>
		<path d='M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24'></path>
		<line x1='1' y1='1' x2='23' y2='23'></line>
	</svg>
</button>