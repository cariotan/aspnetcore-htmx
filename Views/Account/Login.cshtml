@model LoginModel

@{
	ViewData["Title"] = "Login";
}

<title>
	@ViewData["Title"]
</title>
<div class='h-screen'>
	<div class='flex flex-col justify-center min-h-full px-6 py-12 lg:px-8'>
		<div class='sm:mx-auto sm:w-full sm:max-w-sm'>
			<h2 class='mt-10 text-center text-2xl/9 text-gray-900 font-bold tracking-tight'>
				Sign in to your account
			</h2>
		</div>

		<div class='mt-10 sm:mx-auto sm:w-full sm:max-w-sm'>
			<form action='/Account/Login'
				  method='post'
				  class='space-y-6'>

				<div>
					<label for='email' class='block text-gray-900 text-sm/6 font-medium'>
						Email address
					</label>
					<div class='mt-2'>
						<input type='email'
							   asp-for='Email'
							   autocomplete='email'
							   value='@Model?.Email'
							   class='block rounded-md outline outline-1 outline-gray-300 -outline-offset-1 w-full bg-white px-3 py-1.5 text-base text-gray-900 placeholder:text-gray-400 focus:outline focus:outline-2 focus:outline-indigo-600 focus:-outline-offset-2 sm:text-sm/6' />
						@Html.ValidationMessageFor(x => x.Email)
					</div>
				</div>

				<div>
					<div class='flex justify-between items-center'>
						<label for='password' class='block text-gray-900 text-sm/6 font-medium'>
							Password
						</label>
						<div class='text-sm'>
							<a href='#' class='text-indigo-600 font-semibold hover:text-indigo-500'>
								Forgot password?
							</a>
						</div>
					</div>
					<div class='mt-2'>
						<input type='password'
							   asp-for='Password'
							   autocomplete='current-password'
							   value='@Model?.Password'
							   class='block rounded-md outline outline-1 outline-gray-300 -outline-offset-1 w-full bg-white px-3 py-1.5 text-base text-gray-900 placeholder:text-gray-400 focus:outline focus:outline-2 focus:outline-indigo-600 focus:-outline-offset-2 sm:text-sm/6' />
						@Html.ValidationMessageFor(x => x.Password)
					</div>
				</div>

				<div>
					<button type='submit'
							class='mt-5 rounded-lg border border-gray-300 w-full bg-indigo-600 flex justify-center items-center text-white px-6 py-2 text-sm text-gray-800 font-medium hover:bg-indigo-400 focus:outline-none'>
						Sign in
					</button>
					@Html.ValidationMessage("Error")
				</div>
				<input type='hidden'
					   name='returnUrl'
					   value='@ViewData["ReturnUrl"]' />
			</form>

			<div class='relative mt-6'>
				<div class='absolute inset-0 flex items-center'>
					<div class='w-full border-t border-gray-300'></div>
				</div>
				<div class='relative flex justify-center text-sm'>
					<span class='bg-white px-2 text-gray-500'>or</span>
				</div>
			</div>

			<a href='/Account/GoogleLogin' class='mt-5 rounded-lg border border-gray-300 flex justify-center items-center bg-white px-6 py-2 text-sm text-gray-800 font-medium hover:bg-gray-200 focus:outline-none'>
				<svg class='mr-2 w-6 h-6' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' width='800px' height='800px' viewBox='-0.5 0 48 48' version='1.1'>
					<g id='Icons' stroke='none' stroke-width='1' fill='none' fill-rule='evenodd'>
						<g id='Color-' transform='translate(-401.000000, -860.000000)'>
							<g id='Google' transform='translate(401.000000, 860.000000)'>
								<path d='M9.82727273,24 C9.82727273,22.4757333 10.0804318,21.0144 10.5322727,19.6437333 L2.62345455,13.6042667 C1.08206818,16.7338667 0.213636364,20.2602667 0.213636364,24 C0.213636364,27.7365333 1.081,31.2608 2.62025,34.3882667 L10.5247955,28.3370667 C10.0772273,26.9728 9.82727273,25.5168 9.82727273,24' id='Fill-1' fill='#FBBC05'>

								</path>
								<path d='M23.7136364,10.1333333 C27.025,10.1333333 30.0159091,11.3066667 32.3659091,13.2266667 L39.2022727,6.4 C35.0363636,2.77333333 29.6954545,0.533333333 23.7136364,0.533333333 C14.4268636,0.533333333 6.44540909,5.84426667 2.62345455,13.6042667 L10.5322727,19.6437333 C12.3545909,14.112 17.5491591,10.1333333 23.7136364,10.1333333' id='Fill-2' fill='#EB4335'>

								</path>
								<path d='M23.7136364,37.8666667 C17.5491591,37.8666667 12.3545909,33.888 10.5322727,28.3562667 L2.62345455,34.3946667 C6.44540909,42.1557333 14.4268636,47.4666667 23.7136364,47.4666667 C29.4455,47.4666667 34.9177955,45.4314667 39.0249545,41.6181333 L31.5177727,35.8144 C29.3995682,37.1488 26.7323182,37.8666667 23.7136364,37.8666667' id='Fill-3' fill='#34A853'>

								</path>
								<path d='M46.1454545,24 C46.1454545,22.6133333 45.9318182,21.12 45.6113636,19.7333333 L23.7136364,19.7333333 L23.7136364,28.8 L36.3181818,28.8 C35.6879545,31.8912 33.9724545,34.2677333 31.5177727,35.8144 L39.0249545,41.6181333 C43.3393409,37.6138667 46.1454545,31.6490667 46.1454545,24' id='Fill-4' fill='#4285F4'>

								</path>
							</g>
						</g>
					</g>
				</svg>
				<span>
					Continue with Google
				</span>
			</a>

			<p class='mt-10 text-center text-gray-500 text-sm/6'>

				Not a member?

				<a href='/Account/Register' class='text-indigo-600 font-semibold hover:text-indigo-500'>
					Register here
				</a>
			</p>
		</div>
	</div>
</div>