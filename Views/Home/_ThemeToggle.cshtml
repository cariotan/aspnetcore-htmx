<div
	x-data=
	'
		{
			themeToggle_theme: localStorage.theme,
		}
	'
	x-init=
	'
		$watch("themeToggle_theme", value =>
		{
			layout_changeTheme(value)
		})
	'
	class='rounded-full inline-flex items-center bg-slate-200 p-1 text-slate-600 dark:bg-slate-700 dark:text-slate-400 debug-ring shadow-inner'
>
	<button
		x-on:click=
		'
			themeToggle_theme = "light"
		'
		:class='themeToggle_theme === "light" ? "bg-white text-slate-900 dark:bg-slate-800 dark:text-white shadow-md" : ""'
		class='relative transition-all duration-200 rounded-full inline-flex items-center gap-2 px-4 py-2.5 text-sm font-medium dark:hover:text-white group hover:text-slate-900'
	>
		<svg
			xmlns='http://www.w3.org/2000/svg'
			width='16'
			height='16'
			viewBox='0 0 24 24'
			fill='none'
			stroke='currentColor'
			stroke-width='2'
			stroke-linecap='round'
			stroke-linejoin='round'
			class='transition-transform duration-200 group-hover:scale-105 lucide lucide-sun'
		>
			<circle cx='12' cy='12' r='4'></circle>
			<path d='M12 2v2'></path>
			<path d='M12 20v2'></path>
			<path d='m4.93 4.93 1.41 1.41'></path>
			<path d='m17.66 17.66 1.41 1.41'></path>
			<path d='M2 12h2'></path>
			<path d='M20 12h2'></path>
			<path d='m6.34 17.66-1.41 1.41'></path>
			<path d='m19.07 4.93-1.41 1.41'></path>
		</svg>
		<span class='hidden sm:inline'>
			Light
		</span>
	</button>

	<button
		x-on:click=
		'
			themeToggle_theme = "dark"
		'
		:class='themeToggle_theme === "dark" ? "bg-white text-slate-900 dark:bg-slate-800 dark:text-white shadow-md" : ""'
		class='relative transition-all duration-200 rounded-full inline-flex items-center gap-2 px-4 py-2.5 text-sm font-medium group'
	>
		<svg
			xmlns='http://www.w3.org/2000/svg'
			width='16'
			height='16'
			viewBox='0 0 24 24'
			fill='none'
			stroke='currentColor'
			stroke-width='2'
			stroke-linecap='round'
			stroke-linejoin='round'
			class='transition-transform duration-200 scale-110 lucide lucide-moon'
		>
			<path d='M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z'></path>
		</svg>
		<span class='hidden sm:inline'>
			Dark
		</span>
	</button>

	<button
		x-on:click=
		'
			themeToggle_theme = "system"
		'
		:class='themeToggle_theme === "system" || !themeToggle_theme ? "bg-white text-slate-900 dark:bg-slate-800 dark:text-white shadow-md" : ""'
		class='relative transition-all duration-200 rounded-full inline-flex items-center gap-2 px-4 py-2.5 text-sm font-medium dark:hover:text-white group hover:text-slate-900'
	>
		<svg
			xmlns='http://www.w3.org/2000/svg'
			width='16'
			height='16'
			viewBox='0 0 24 24'
			fill='none'
			stroke='currentColor'
			stroke-width='2'
			stroke-linecap='round'
			stroke-linejoin='round'
			class='transition-transform duration-200 group-hover:scale-105 lucide lucide-monitor'
		>
			<rect width='20' height='14' x='2' y='3' rx='2'></rect>
			<line x1='8' x2='16' y1='21' y2='21'></line>
			<line x1='12' x2='12' y1='17' y2='21'></line>
		</svg>
		<span class='hidden sm:inline'>
			System
		</span>
	</button>
</div>